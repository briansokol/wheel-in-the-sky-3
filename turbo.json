{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [".env*", ".dev.vars", "WITH_SENTRY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false
    },
    "build:with-sentry": {
      "dependsOn": ["^build:with-sentry"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "WITH_SENTRY"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build", "^deploy"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "types": {
      "dependsOn": ["^types"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env*", ".dev.vars"],
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["^test:ci"]
    }
  }
}
